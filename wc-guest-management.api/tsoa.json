{
    "swagger": {
        "outputDirectory": ".",
        "entryFile": "./src/app.ts",
        "securityDefinitions": {
            "bearer": {
                "type": "apiKey",
                "in": "header",
                "name": "authorization"
            }
        }
    },
    "routes": {
        "basePath": "/",
        "entryFile": "./src/app.ts",
        "authenticationModule": "./src/auth.ts",
        "routesDir": "./src"
    }
}